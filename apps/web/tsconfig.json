{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"jsx": "preserve",
		"allowJs": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"types": ["node"],
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"**/*.js",
		"**/*.jsx",
		"../../libs/studio/types/src/generated/schema.d.ts",
		"next-env.d.ts"
	],
	"exclude": [
		"node_modules",
		"**/*.stories.ts",
		"**/*.stories.tsx",
		"**/*.spec.ts",
		"**/*.spec.tsx",
		"jest.config.ts"
	]
}
